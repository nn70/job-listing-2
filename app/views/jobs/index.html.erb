<div class="row">
  <div class="col-md-9">
    <table class="table table-boldered">
        <thead>
        <tr>
            <td>职缺</td>
            <td>公司</td>
            <td>地点</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>刊登时间</td>
        </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
          <tr>
              <td>
                  <%= link_to(job.title, job_path(job)) %>
              </td>
              <td>
                  <%= job.company %>
              </td>
              <td>
                  <%= job.city %>
              </td>
              <td>
                  <%= job.wage_lower_bound %>
              </td>
              <td>
                  <%= job.wage_upper_bound %>
              </td>
              <td>
                  <%= job.created_at %>
              </td>
          </tr>
          <% end %>
        </tbody>

    </table>
  </div>

  <div class="col-md-3">
    推薦工作
  </div>
</div>
