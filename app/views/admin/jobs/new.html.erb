<h1> Add a new job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title, :label => "job title"  %>
<%= f.input :company, :label => "company"  %>
<%= f.input :city, :label => "location"  %>
<%= f.input :description, :label => "job description"  %>
<%= f.input :wage_lower_bound, :label => "wage lower bound" %>
<%= f.input :wage_upper_bound, :label => "wage upper bound" %>
<%= f.input :contact_email, :label => "E-mail"  %>
<%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
  <% end %>
